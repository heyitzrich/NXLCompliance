<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NXL Compliance Tracker</title>
    <%- include("sidebar.ejs") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-oBqDVmMz4fnFO9qDb4BtvK8EzzP6f6nJ6k4IM4d0Pi9ioD4o9Jl06F7jXwVNs8i6" crossorigin="anonymous"></script>
</head>
<body>
    <h1 class="content text-center">Compliance Tracker</h1>
    <div class="d-flex mb-3">
        <input type="text" id="searchInput" class="form-control search-bar content" placeholder="Search by Project Number" style="width:100%">
    </div>
  
    <div class="d-flex justify-content-end">
        <div class="dropdown d-flex gap-2 justify-content-end mb-4 me-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownProjectManager" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filter by Project Manager</button>
            <ul class="dropdown-menu" aria-labelledby="dropdownProjectManager" id="dropdownProjectManagerMenu"></ul>
        </div>
        <div class="dropdown d-flex gap-2 justify-content-end mb-4 me-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownProjectCustomer" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Filter by Customer </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownProjectCustomer" id="dropdownProjectCustomerMenu"></ul>
        </div>
    </div>

    <div class="d-flex">
        <table class="table content table-auto table-hover table-striped" style="table-layout: auto; width: 100%">
            <thead class="table-dark">
                <tr>
                    <th>Project Number</th>
                    <th>DIR Number</th>
                    <th>Project Name</th>
                    <th>Project Manager</th>
                    <th>Customer Name</th>
                    <th>CPR Status</th>
                    <th>Tracking</th>
                    <th>LCP Portal</th>
                </tr>
            </thead>
            <tbody id="projectTableBody">
                <% complianceData.forEach(function(complianceData) { %>
                  <tr data-dasonsitedate="<%= changeDate(complianceData.dasonsitedate) %>" data-actualonsitedate="<%= changeDate(complianceData.actualonsitedate) %>">
                    <td data-tippy-content="<div>
                      <p><strong>Project Notes:</strong></p>
                      <%- complianceData.projectnotes ? complianceData.projectnotes
                          .replace(/\n/g, '</p><p>')
                          .replace(/^/, '<p>')
                          .replace(/$/, '</p>') : '<p>No notes available.</p>' %>
                  </div>"><a href="/projects/<%= complianceData.projectnumber %>"><%= complianceData.projectnumber %></a></td>
                    <td><%= complianceData.dirnumber %></td>
                    <td><%= complianceData.projectname %></td>
                    <td><%= complianceData.projectmanager %></td>
                    <td><%= complianceData.projectcustomer %></td>  
                    <td><%= complianceData.projectcprstatus %></td>
                    <td><%= complianceData.projecttracking %></td>
                    <td><%= complianceData.projectportal %></td>                       
                  </tr>
                <% }); %>
              </tbody>
        </table>
    </div>
    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://unpkg.com/tippy.js@6"></script>
    <script src="search.js"></script>
    <script src="projects.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const rows = document.querySelectorAll('#projectTableBody tr');
        
            rows.forEach(row => {
                const dasonsitedate = row.getAttribute('data-dasonsitedate');
                const actualonsitedate = row.getAttribute('data-actualonsitedate');
        
                // Parse dates if they are in a standard format, e.g., YYYY-MM-DD
                const dasonsiteDateObj = new Date(dasonsitedate);
                const actualonsiteDateObj = new Date(actualonsitedate);
        
                if (!dasonsitedate || !actualonsitedate) {
                row.classList.add('table-warning');
                } else {
                    // Parse dates if they are in a standard format, e.g., YYYY-MM-DD
                    const dasonsiteDateObj = new Date(dasonsitedate);
                    const actualonsiteDateObj = new Date(actualonsitedate);

                    // Check if both dates are equal
                    if (dasonsiteDateObj.getTime() === actualonsiteDateObj.getTime()) {
                        row.classList.add('table-success');
                    } else if (dasonsiteDateObj.getTime() !== actualonsiteDateObj.getTime()) {
                        row.classList.add('table-danger');
                    }
                }
    });
});
        </script>
</body>
</html>