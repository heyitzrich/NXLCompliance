<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NXL Compliance Tracker</title>
    <%- include("sidebar.ejs") %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <style>
        .text-danger {
            color:red;
        }
    </style>
</head>
<body>
    <h1 class="content text-center">Compliance Tracker</h1>
    <div class="d-flex mb-3">
        <input type="text" id="searchInput" class="form-control search-bar content" placeholder="Search by Project Number" style="width:100%">
    </div>
  
    <div class="d-flex justify-content-end">
        <div class="dropdown d-flex gap-2 justify-content-end mb-4 me-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownProjectManager" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filter by Project Manager</button>
            <ul class="dropdown-menu" aria-labelledby="dropdownProjectManager" id="dropdownProjectManagerMenu"></ul>
        </div>
        <div class="dropdown d-flex gap-2 justify-content-end mb-4 me-2">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownProjectCustomer" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Filter by Customer </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownProjectCustomer" id="dropdownProjectCustomerMenu"></ul>
        </div>
    </div>

    <div class="d-flex">
        <table class="table content table-auto table-hover" style="table-layout: auto; width: 100%">
            <thead class="table-dark">
                <tr>
                    <th>Project Number</th>
                    <th>DIR Number</th>
                    <th>Project Name</th>
                    <th>Project Manager</th>
                    <th>Customer Name</th>
                    <th>Last Payroll Date</th>
                    <th>Tracking</th>
                    <th>LCP Portal</th>
                </tr>
            </thead>
            <tbody id="projectTableBody">
                <% complianceData.forEach(function(complianceData) { %>
                  <tr data-dasonsitedate="<%= complianceData.dasonsitedate %>" data-actualonsitedate="<%= complianceData.actualonsitedate %>" data-payrolldate="<%= complianceData.payrolldate%>">
                    <td data-tippy-content="<div>
                      <p><strong>Project Notes:</strong></p>
                      <%- complianceData.projectnotes ? complianceData.projectnotes
                          .replace(/\n/g, '</p><p>')
                          .replace(/^/, '<p>')
                          .replace(/$/, '</p>') : '<p>No notes available.</p>' %>
                  </div>"><a href="/projects/<%= complianceData.projectnumber %>"><%= complianceData.projectnumber %></a></td>
                    <td><%= complianceData.dirnumber %></td>
                    <td><%= complianceData.projectname %></td>
                    <td><%= complianceData.projectmanager %></td>
                    <td><%= complianceData.projectcustomer %></td>  
                    <td class="payroll-days-old"></td>
                    <td><%= complianceData.projecttracking %></td>
                    <td><%= complianceData.projectportal %></td>                       
                  </tr>
                <% }); %>
              </tbody>
        </table>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
    const rows = document.querySelectorAll('#projectTableBody tr');

    rows.forEach(row => {
        const dasonsiteDate = new Date(row.dataset.dasonsitedate);
        const actualonsiteDate = new Date(row.dataset.actualonsitedate);
        const payrollDate = new Date(row.dataset.payrolldate);
        const payrollCell = row.querySelector('.payroll-days-old');

        if (payrollDate && !isNaN(payrollDate.getTime())) {
            const today = new Date();
            const timeDiff = today - payrollDate;
            const daysOld = Math.floor(timeDiff / (1000 * 60 * 60 * 24));

            payrollCell.textContent = `${daysOld} days ago`;

            if (daysOld > 7) {
                payrollCell.classList.add('text-danger');
            }
        }
        if (!isNaN(dasonsiteDate.getTime()) && !isNaN(actualonsiteDate.getTime())) {
            if (dasonsiteDate.getTime() === actualonsiteDate.getTime()) {
                row.classList.add('table-success');
            } else {
                row.classList.add('table-danger');
            }
        }
    });
});
    </script>
    <script src="https://unpkg.com/@popperjs/core@2"></script>
    <script src="https://unpkg.com/tippy.js@6"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="projects.js"></script>
    <script src="search.js"></script>   
</body>
</html>