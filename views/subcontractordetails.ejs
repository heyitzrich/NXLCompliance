            <option value="CO" <%= sub.substate === 'CO' ? 'selected' : '' %>>Colorado</option>
            <option value="CT" <%= sub.substate === 'CT' ? 'selected' : '' %>>Connecticut</option>
            <option value="DE" <%= sub.substate === 'DE' ? 'selected' : '' %>>Delaware</option>
            <option value="FL" <%= sub.substate === 'FL' ? 'selected' : '' %>>Florida</option>
            <option value="GA" <%= sub.substate === 'GA' ? 'selected' : '' %>>Georgia</option>
            <option value="HI" <%= sub.substate === 'HI' ? 'selected' : '' %>>Hawaii</option>
            <option value="ID" <%= sub.substate === 'ID' ? 'selected' : '' %>>Idaho</option>
            <option value="IL" <%= sub.substate === 'IL' ? 'selected' : '' %>>Illinois</option>
            <option value="IN" <%= sub.substate === 'IN' ? 'selected' : '' %>>Indiana</option>
            <option value="IA" <%= sub.substate === 'IA' ? 'selected' : '' %>>Iowa</option>
            <option value="KS" <%= sub.substate === 'KS' ? 'selected' : '' %>>Kansas</option>
            <option value="KY" <%= sub.substate === 'KY' ? 'selected' : '' %>>Kentucky</option>
            <option value="LA" <%= sub.substate === 'LA' ? 'selected' : '' %>>Louisiana</option>
            <option value="ME" <%= sub.substate === 'ME' ? 'selected' : '' %>>Maine</option>
            <option value="MD" <%= sub.substate === 'MD' ? 'selected' : '' %>>Maryland</option>
            <option value="MA" <%= sub.substate === 'MA' ? 'selected' : '' %>>Massachusetts</option>
            <option value="MI" <%= sub.substate === 'MI' ? 'selected' : '' %>>Michigan</option>
            <option value="MN" <%= sub.substate === 'MN' ? 'selected' : '' %>>Minnesota</option>
            <option value="MS" <%= sub.substate === 'MS' ? 'selected' : '' %>>Mississippi</option>
            <option value="MO" <%= sub.substate === 'MO' ? 'selected' : '' %>>Missouri</option>
            <option value="MT" <%= sub.substate === 'MT' ? 'selected' : '' %>>Montana</option>
