<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subcontractor Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%- include("sidebar2.ejs") %>
</head>
<body>
    <h1 class="content text-center">Subcontractor Details</h1>
    
    <form action="/subcontractor/<%=sub.subname %>" method="Post" class="content">
      <div class="row justify-content-md-center">
          <div class="form-group col-md-6">
            <label for="inputSubCompany">Subcontractor Name</label>
            <input type="text" class="form-control" id="inputSub" name="subName" value="<%=sub.subname %>" required disabled readonly>
          </div>
      </div>

      <div class="row justify-content-md-center">
        <div class="form-group col-md-6">
          <label for="inputSubAddress">Address</label>
          <input type="text" class="form-control" id="inputAddress" name="subAddress" value="<%=sub.subaddress %>">
        </div>
      </div>

      <div class="row justify-content-md-center">
        <div class="form-group col-md-2">
          <label for="inputSubCity">City</label>
          <input type="text" class="form-control" id="inputCity" name="subCity" value="<%=sub.subcity %>">
        </div>
        <div class="form-group col-md-2">
          <label for="inputSubState">State</label>
