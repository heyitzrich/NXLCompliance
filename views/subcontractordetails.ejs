        <div class="form-group col-md-6">
          <label for="inputSubContactName">Sub Contact Name</label>
          <input type="text" class="form-control" id="inputSubContactName" name="subContactName" value="<%=sub.subcontactname %>">
        </div>
      </div>

      <div class="row justify-content-md-center">
        <div class="form-group col-md-3">
          <label for="inputSubContactNumber">Sub Contact Number</label>
          <input type="text" class="form-control" id="inputSubContactNumber" name="subContactNumber" value="<%=sub.subcontactnumber %>">
        </div>
        <div class="form-group col-md-3 mb-3">
          <label for="inputSubContactEmail">Sub Contact Email</label>
          <input type="text" class="form-control" id="inputSubContactEmail" name="subContactEmail" value="<%=sub.subcontactemail %>">
        </div>
      </div>

        <div class="row justify-content-md-center">
          <div class="row col-md-1">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>

      </form>

      
